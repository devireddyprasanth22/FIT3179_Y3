{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 500,
  "title": "Tourist employees by tourism industry (2010-2021)",
  "data": {
    "url": "data/tourism_employees.csv",
    "format": {
      "type": "csv"
    }
  },

  "params": [
    {
      "name": "selectedCountry",
      "value": "Albania",
      "bind": {
        "input": "select",
        "options": [
          "Albania",
          "Angola",
          "Argentina",
          "Australia",
          "Austria",
          "Azerbaijan",
          "Bahrain",
          "Belarus",
          "Belgium",
