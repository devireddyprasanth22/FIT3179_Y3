          "United States Of America",
          "United States Virgin Islands",
          "Uruguay",
          "Uzbekistan",
          "Zambia"
        ]
      }
    }
  ],
  "transform": [
    {
      "filter": { "field": "Country", "equal": { "expr": "selectedCountry" } }
    },
    {
      "fold": [
        "Accomodation",
        "F&B",
        "Passenger transport",
        "Travel agencies",
        "Others"
      ],
      "as": ["key", "values"]
    },
    { "filter": { "field": "values", "valid": true } },
    {
      "calculate": "datum.values === 0 ? 'No data to show' : format(datum.values, ',')",
      "as": "textValue"
    }
  ],
  "layer": [
    {
      "mark": { "type": "bar", "invalid": "filter" },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "values",
          "type": "quantitative",
          "title": "Tourist Expenditure"
        },
        "color": {
          "field": "key",
          "type": "nominal",
          "title": "Tourism Industry"
        },
        "tooltip": [
          {
            "field": "key",
            "type": "nominal",
            "title": "Industry type"
          },
          {
            "field": "values",
            "type": "quantitative",
            "title": "Employees in thousands"
          },
          {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "baseline": "bottom",
        "dx": 0,
        "dy": -5
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "aggregate": "sum",
          "field": "values",
          "type": "quantitative"
        },
        "text": {
          "field": "Total",
          "type": "quantitative",
          "format": ".2f"
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "interpolate": "monotone",
        "strokeDash": [8, 8]
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "Total",
          "type": "quantitative",
          "title": "Total Employees"
        },
        "color": { "value": "black" },
        "opacity": { "value": 1 }
      }
    }
  ]
}
