  "transform": [
    {
      "filter": { "field": "Country", "equal": { "expr": "selectedCountry" } }
    },
    {
      "fold": ["Business and Professional", "Personal"],
      "as": ["key", "values"]
    },
    { "filter": { "field": "values", "valid": true } },
    {
      "calculate": "datum.values === 0 ? 'No data to show' : format(datum.values, ',')",
      "as": "textValue"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "text",
        "align": "left",
        "invalid": "filter",
        "tooltip": true,
        "baseline": "middle",
        "dx": 5,
        "color": "black",
        "text": "No Value"
      }
    },
    {
      "mark": { "type": "bar", "invalid": "filter" },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "values",
          "type": "quantitative",
          "title": "Number of Visits",
          "stack": "normalize"
        },
