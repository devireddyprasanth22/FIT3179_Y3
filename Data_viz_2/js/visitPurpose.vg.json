    },
    {
      "fold": ["Business and Professional", "Personal"],
      "as": ["key", "values"]
    },
    { "filter": { "field": "values", "valid": true } },
    {
      "calculate": "datum.values === 0 ? 'No data to show' : format(datum.values, ',')",
      "as": "textValue"
    }
  ],
  "layer": [
    {
      "mark": { "type": "bar", "invalid": "filter" },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "values",
          "type": "quantitative",
          "title": "Number of Visits",
          "stack": "normalize"
        },
        "color": {
          "field": "key",
          "type": "nominal",
          "title": "Purpose of Visit"
        },
        "tooltip": [
          {
            "field": "key",
